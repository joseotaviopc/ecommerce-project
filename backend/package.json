{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only src/server.ts",
    "docker:mongo": "docker-compose up -d mongodb",
    "lint": "tsc --noEmit",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "npx vitest",
    "test:cov": "npx vitest --coverage",
    "build": "tsc",
    "build:prod": "npm run build:prod-image && npm run build:prod-tag && npm run build:prod-upload",
    "build:prod-image": "docker build --platform linux/amd64 -t eco-back:latest  .",
    "build:prod-tag": "docker tag eco-back:latest joseotaviocarvalho/eco-back:latest",
    "build:prod-upload": "docker push joseotaviocarvalho/eco-back:latest",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^9.4.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "express": "^4.21.2",
    "mongoose": "^8.9.7",
    "prettier": "^3.4.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@vitest/coverage-v8": "^3.0.5",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
